<header class="navbar navbar-dark bg-dark fixed-top shadow">
  <nav class="container-fluid">
    <a class="navbar-brand d-flex align-items-center" href="/">
      <i class="fa-solid fa-circle-play"></i>
      <span class="ps-2 fw-semibold">VidLib</span>
    </a>
    <form action="/search" method="get" class="form-search d-none d-md-flex" role="search">
      <input class="form-control me-2" type="search" name="q" value="" placeholder="Hľadať" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </form>
    <div class="d-flex align-items-center justify-content-start">
      <a href="/account" class="d-none d-md-inline-block btn btn-outline-success align-items-center justify-content-start">
