          <img src="<%= peertubeDomain %><%= user.avatar.path %>" class="avatar" rel="nofollow">
        <% } %>
        <span class="ps-2 text-white"><%= user.displayName %></span>
      </a>
      <a href="/signout" class="btn btn-outline-secondary ms-3">
        <i class="fa-solid fa-right-from-bracket"></i>
      </a>
    </div>
  </nav>
