<!doctype html>
<html lang="<%= applang %>">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= query %> | <%= appname %></title>
    <%- include('layout/header/favicon'); %>
    <%- include('layout/header/styles'); %>
  </head>
  <body class="bg-dark">
    <%- include('components/navbar'); %>
    <main class="container pt-3 pt-md-5 pb-3">
      <% if(videos.length > 0){ %>
        <section class="row" data-masonry='{"percentPosition": true }'>
          <%- include('components/video/list'); %>
        </section>
      <% } else{ %>  
        <div class="alert alert-success" role="alert">
          Pre hľadaný výraz - <%= query %> - neboli nájdené žiadne výsledky
        </div>        
      <% } %>
    </main>    
    <%- include('layout/footer/scripts'); %>
    <script src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js" integrity="sha384-GNFwBvfVxBkLMJpYMOABq3c+d3KnQxudP/mGPkzpZSTYykLBNsZEnG2D9G/X/+7D" crossorigin="anonymous" async></script>
    <script src="/static/js/app.js"></script>
  </body>
</html>